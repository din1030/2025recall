.vote-hint
	line-height: 1.7rem;

.btn-reset:disabled
	cursor: not-allowed;

.result-hint p
	font-size: 1.1rem;
	line-height: 1.7rem;
	letter-spacing: 1px;

// ref
ol.ref-list
	counter-reset: myCouter;
	padding-left: 0;

	li
		list-style: outside none none;

	li::before
		content: counter(myCouter, decimal);
		counter-increment: myCouter;
		background: #2980b9 none repeat scroll 0 0;
		color: white;
		display: inline-block;
		height: 40px;
		line-height: 40px;
		margin: 5px 10px;
		text-align: center;
		width: 40px;

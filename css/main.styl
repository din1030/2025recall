@media (max-width: 992px)
	.container
		width: 100%;
		max-width: none;

@media (max-width: 330px)
	.navbar-brand
		font-size: 1.1rem;

.vertical-rl
	writing-mode: vertical-rl;
	-webkit-writing-mode: vertical-rl;
	-ms-writing-mode: vertical-rl;

body
	padding-top: 70px;

@media (max-width: 680px)
	body
		padding-bottom: 80px;

	#share-bar
		opacity: 0.7;

.pager
	top: 70px;
	margin: 10px;
	z-index: 100;
	opacity: 0.8;

	// &.previous
	&.next
		right: 0;

.vote-section
	width: 100%;
	padding: 20px 40px;
	max-width: 300px;
	margin: 0 auto;

@media (max-width: 440px)
	.vote-section
		padding: 0 20px;

